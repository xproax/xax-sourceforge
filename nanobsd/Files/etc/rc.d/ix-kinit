#!/bin/sh
#
# $FreeBSD$
#

# PROVIDE: ix-kinit
# REQUIRE: kerberos
# REQUIRE: ix-samba
# REQUIRE: ntpd

. /etc/rc.freenas


kerberos_start()
{
	if AD_enabled
	then
		AD_init

		domainname=$(AD_get domainname)
		adminname=$(AD_get adminname)
		adminpw=$(AD_get adminpw)

		if [ -n "${adminname}" -a -n "${domainname}" -a -n "${adminpw}" ]
		then
			local pwfile="/tmp/."$(date '+%H%M%S')
			touch "${pwfile}"
			chmod 600 "${pwfile}"
			echo "${adminpw}" > ${pwfile}

			domainname=$(echo "${domainname}"|tr a-z A-Z)
			kinit --password-file="${pwfile}" "${adminname}@${domainname}"

			rm "${pwfile}"
			sleep 10
		fi
	fi
}

kerberos_stop()
{
	kdestroy
}

name="ix-kinit"
start_cmd='kerberos_start'
stop_cmd='kerberos_stop'
        
load_rc_config $name
run_rc_command "$1"
