# $FreeBSD: stable/8/tools/tools/nanobsd/gateworks/Files/root/updatep1 189084 2009-02-26 19:44:52Z sam $
#
# Script to update partition 1 on a NanoBSD system.
#
# usage:
#	ssh somewhere cat image.s1 | sh updatep1
#

set -e

. /etc/nanobsd.conf

if mount | grep ${NANO_DRIVE}s1 > /dev/null ; then
	echo "You are running partition 1 already"
	echo "you probably want to use 'updatep2' instead"
	exit 1
fi

LABELNAME=`echo ${NANO_DRIVE} | cut -f2 -d/`
TARGET_DRIVE=`glabel status | awk '/ufs\/'${LABELNAME}'s2a/ { print $3; }' | sed -e s,s2a,,`

# Blow away old system.
dd if=/dev/zero of=/dev/${TARGET_DRIVE}s1 bs=1m count=1 > /dev/null 2>&1

# Copy in new system
dd of=/dev/${TARGET_DRIVE}s1 obs=128k

# Check that it worked
fsck_ffs -n /dev/${TARGET_DRIVE}s1a

# Save root ssh keys
if [ -d /root/.ssh ]; then
    mkdir /tmp/upgrade && mount /dev/${TARGET_DRIVE}s1a /tmp/upgrade && \
        cp -R /root/.ssh /tmp/upgrade/root/ && chmod 700 /tmp/upgrade/root/.ssh
    umount /dev/${TARGET_DRIVE}s1a && rmdir /tmp/upgrade
fi

gpart set -a active -i 1 ${TARGET_DRIVE}
